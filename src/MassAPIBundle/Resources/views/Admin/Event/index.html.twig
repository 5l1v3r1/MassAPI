{% extends 'MassAPIBundle:Admin:layout.html.twig' %}

{% block title %}Event • MassAPI • Admin{% endblock %}

{% block container %}
    <div class="btn-group" role="group">
        <a href="{{ path('admin_event_create') }}" type="button" class="btn btn-primary">New</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Location</th>
            <th>Start at</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{% for location in event.location %}{{ location.name }}{% endfor %}</td>
                <td>{{ event.doorTime|date('d/m/Y H:i') }}</td>
                <td><a href="{{ path('admin_event_update', {'id': event.id}) }}" type="button" class="btn btn-primary">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ pagerfanta(events) }}
{% endblock %}
